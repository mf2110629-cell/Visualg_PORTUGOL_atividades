Algoritmo "somatorio"
Var
   N, soma, cont: inteiro
Inicio
      cont <- 1

      enquanto (cont <= 2) faca
      escreva("digite um numero: ")
      leia(N)
      cont <- cont + 1
      N <- N + N
fimenquanto

      Escreva("O somatorio desses numeros são: ", N)
Fimalgoritmo

